<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.neu.csye6200.bankui.controller.AccountController"
      prefHeight="1000.0" prefWidth="500.0">
    <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>

    <Label text="Primary Account Holder : " GridPane.columnIndex="0"
           GridPane.rowIndex="1" >
    </Label>
    <!-- Add Name Text Field -->
    <TextField fx:id="primaryAccountHolder" prefHeight="40"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Type : " GridPane.columnIndex="0"
           GridPane.rowIndex="1" >
    </Label>
    <!-- Add Name Text Field -->
    <TextField fx:id="typeAccount" prefHeight="40"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Account Balance : " GridPane.columnIndex="0"
           GridPane.rowIndex="1" >
    </Label>
    <!-- Add Name Text Field -->
    <TextField fx:id="accBal" prefHeight="40"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>


    <Button fx:id="addAccountButton" text="Add Account"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="CENTER"
            onAction="#onaddAccountButtonClick">
        <VBox.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </VBox.margin>
    </Button>


    <Button fx:id="backButton" text="Back"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="CENTER"
            onAction="#onBackButtonClick">
        <VBox.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </VBox.margin>
    </Button>

</VBox>
